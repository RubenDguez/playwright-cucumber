{
  "name": "playwright-cucumber",
  "version": "1.0.0",
  "scripts": {
    "test": "cucumber-js --config cucumber.ts tests/features/**/*.feature",
    "feature": "cucumber-js --config cucumber.ts",
    "lint": "npx eslint . --fix",
    "prettier": "npx prettier . --write",
    "allure:generate": "npx allure generate -o allure-report",
    "allure:open": "npx allure open",
    "allure": "npm run allure:generate && npm run allure:open"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "bdd",
    "testing"
  ],
  "author": "Argenis Dominguez",
  "license": "ISC",
  "description": "Playwright Cucumber integration for BDD testing",
  "engines": {
    "node": "24"
  },
  "devDependencies": {
    "@argenis.dominguez/logger": "^1.0.0",
    "@cucumber/cucumber": "^12.6.0",
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "allure": "^3.0.1",
    "allure-cucumberjs": "^3.4.5",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "lefthook": "^2.0.15",
    "prettier": "3.8.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
